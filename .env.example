ADDRESS=localhost
PORT=8000
ENV=dev

# Allow binding to all network interfaces (0.0.0.0/::)
# Only set to true for development/staging environments
# Production should use specific IP addresses or localhost (127.0.0.1)
ALLOW_DIRECT_ACCESS=false

# Grafana credentials, only needed for docker
# Password in secrets/grafana_password.txt
GRAFANA_ADMIN_USER=admin

# Docker build metadata
APP_VERSION=1.2.0
GIT_COMMIT=$(git rev-parse --short HEAD)
BUILD_DATE=$(date -u +"%Y-%m-%dT%H:%M:%SZ")

# Logging
LOG_LEVEL=info               # debug/info/warn/error - console logging level only (file logging is always DEBUG)
LOG_RETENTION_WEEKS=4        # Number of weeks to keep log files (default: 4)
MAX_LOG_FILE_SIZE=104857600  # Maximum log file size before forced rotation (100MB, default: 100MB)

# Optional limits
MAX_REQUEST_BODY=1048576     # 1MB max request body
MAX_HEADER_SIZE=1048576      # 1MB max header size
