ADDRESS=localhost
PORT=8000
ENV=dev

# Disables the blockDirectAccess middleware
# Set to true when running without reverse proxy in front
ALLOW_DIRECT_ACCESS=true

# Logging
LOG_LEVEL=info               # debug/info/warn/error - console logging level only (file logging is always DEBUG)
LOG_RETENTION_WEEKS=4        # Number of weeks to keep log files (default: 4)
MAX_LOG_FILE_SIZE=104857600  # Maximum log file size before forced rotation (100MB, default: 100MB)

# Optional limits
MAX_REQUEST_BODY=1048576     # 1MB max request body
MAX_HEADER_SIZE=1048576      # 1MB max header size

# ── Build metadata ─────────────────────────────────────────
# Injected automatically by the Makefile at build time.
# Do not set these manually.
APP_VERSION=1.0.0

# ── Observability ─────────────────────────────────────────────
# Local mode (default): config.alloy - obs stack via submodule
# Remote mode: config.remote.alloy - obs stack via tunnel
# Default is always local — remote requires explicit flag
ALLOY_CONFIG=config.alloy

# Remote endpoint URLs (only needed when ALLOY_CONFIG=config.remote.alloy)
# Cloudflare:  https://prometheus-obs.yourdomain.com/api/v1/write
# Tailscale:   http://100.x.x.x:9090/api/v1/write
# Local LAN:   http://192.168.1.x:9090/api/v1/write
# PROMETHEUS_URL=
# LOKI_URL=

# Cloudflare Access (only needed when using Cloudflare tunnel)
# CF_ACCESS_CLIENT_ID=
# CF_ACCESS_CLIENT_SECRET=

